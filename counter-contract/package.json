{
  "name": "@meshsdk/counter-contract",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "compact": "compact compile +0.27.0 src/counter.compact src/managed/counter",
    "test": "vitest run",
    "test:compile": "npm run compact && vitest run",
    "build": "powershell -Command \"if (Test-Path dist) { Remove-Item -Recurse -Force dist }\" && tsc --project tsconfig.build.json && powershell -Command \"Copy-Item -Recurse -Force ./src/managed ./dist/managed\" && powershell -Command \"Copy-Item ./src/counter.compact ./dist\"",
    "lint": "eslint src",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "toolkit-version": "bash src/toolkit/version.sh"  
  }
}
